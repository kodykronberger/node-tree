        <TextBox x:Name="addWordTextBox" HorizontalAlignment="Left" Height="23" Margin="356,41,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="addWordTextBox_TextChanged"/>
